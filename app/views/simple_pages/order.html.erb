<div class="container padding-top">
  <div class="text-center">
    <h1 class="display-4">Ordering</h1>
    <h5>Free delivery on orders exceeding R400</h5>
    <h6>R90 Delivery fee for orders under R400</h6>
  </div>
  <hr>

  <%= flash[:notice] %>

  <%= form_with(url:"/simple_pages/thank_you", class: "form-contact mx-auto was-validated", method: "post", local: true) do |form| %>

    <div class="form-group">
      <%= form.label :name, class: 'sr-only' %>
      <%= form.text_field :name, class: 'form-control', placeholder: "Enter Name", required: true %>
      <div class="valid-feedback">Valid.</div>
      <div class="invalid-feedback">Please fill out this field.</div>
    </div>

    <div class="form-group">
      <%= form.label :email, class: 'sr-only' %>
      <%= form.text_field :email, class: 'form-control', placeholder: "Enter Email", type: :email, required: true %>
      <div class="valid-feedback">Valid.</div>
      <div class="invalid-feedback">Please fill out this field.</div>
    </div>

    <div class="form-group">
      <%= form.label :contact_number, class: 'sr-only' %>
      <%= form.text_field :contact_number, class: 'form-control', placeholder: "Cellphone Number", type: :tel, pattern: '^\d{10}$', required: true %>
      <div class="valid-feedback">Valid.</div>
      <div class="invalid-feedback">Please fill out this field.</div>
    </div>

    <div class="form-group">
      <%= form.label :message, class: 'sr-only' %>
      <%= form.text_area :message, class: 'form-control', placeholder: "Enter Message", rows: 5, required: true %>
    </div>

    <%= form.submit "Send", class: 'form_label' %>
    <% end %>
    
    <br>
</div>